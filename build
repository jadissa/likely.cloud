#!/bin/bash

#
# Get dependencies
#
sudo yum -y update

#
# Install npm
#
sudo yum -y install firewalld epel-release nodejs
node --version
cd /var/www/html/app
npm init
npm install express
#sudo npm install -g node-inspector


#
# Install Composer
#
cd /var/www/html/
echo "Installing Composer..."
curl -sS https://getcomposer.org/installer | php -- --install-dir=.


#
# Update Composer and install dependencies
#
echo "Updating Composer..."
echo 'export PATH=/var/www/html:$PATH' >>/home/jadii/.bashrc
source /home/jadii/.bashrc

echo "Running Composer..."
php composer.phar -V
php composer.phar -v install

#
# Run node
#
node server.js
